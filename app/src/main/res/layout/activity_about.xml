<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayout"
    android:background="@drawable/fondo_avion"
    tools:context=".activity.AboutActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/menu"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="20dp"
            android:background="@drawable/edittext_custom">

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="24dp">

                <TextView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Easy Flight 2024.05.05"
                    android:id="@+id/login_text"
                    android:textSize="36sp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/green"
                    android:gravity="center_horizontal">

                </TextView>

                <TextView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mayo 2024"
                    android:id="@+id/date_text"
                    android:textSize="15sp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="40dp"
                    android:textStyle="bold"
                    android:textColor="@color/green">
                </TextView>
                <TextView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="C.F.G.S. DAM"
                    android:id="@+id/dam_text"
                    android:textSize="15sp"
                    android:layout_marginLeft="40dp"
                    android:textStyle="bold"
                    android:textColor="@color/green">
                </TextView>
                <TextView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Proyecto Final Desarrollo de Aplicaciones Multiplataforma."
                    android:id="@+id/proyecto_text"
                    android:textSize="15sp"
                    android:layout_marginLeft="40dp"
                    android:textStyle="bold"
                    android:textColor="@color/green">
                </TextView>
                <TextView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Desarrollado e Implementado por Maria Luisa Fernández
                    González."
                    android:id="@+id/desarrollado_text"
                    android:textSize="15sp"
                    android:layout_marginLeft="40dp"
                    android:textStyle="bold"
                    android:textColor="@color/green">
                </TextView>



            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_gravity="start">

        <include
            layout="@layout/menu_navigation"></include>

    </RelativeLayout>


</androidx.drawerlayout.widget.DrawerLayout>